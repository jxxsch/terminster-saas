# ============================================
# Supabase (zwingend)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Server-only: Für Admin-Operationen (User-Erstellung, RLS-Bypass)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# E-Mail / Resend (zwingend)
# ============================================
RESEND_API_KEY=re_xxx
# Muss in Resend als Domain verifiziert sein
RESEND_FROM_EMAIL=noreply@your-domain.com
# Empfänger für Kontaktformular-Nachrichten
CONTACT_EMAIL=info@your-domain.com

# ============================================
# App-URLs (zwingend in Production)
# ============================================
# Produktions-URL — wird für Origin-Validierung der Email-API verwendet
# OHNE diesen Wert blockiert die Email-API in Production (fail-closed)
NEXT_PUBLIC_SITE_URL=https://your-domain.com
# Base-URL für E-Mail-Links (Stornierung, Kalender, Einladungen)
NEXT_PUBLIC_BASE_URL=https://your-domain.com
# App-URL (ggf. identisch mit BASE_URL)
NEXT_PUBLIC_APP_URL=http://localhost:3001

# ============================================
# Security (zwingend in Production)
# ============================================
# Auth-Token für Cron-Jobs (/api/series/extend, /api/email/reminders)
# Vercel setzt den Header automatisch. OHNE diesen Wert: Cron-Endpoints geben 500 zurück.
CRON_SECRET=your-random-secret-here

# ============================================
# Admin (zwingend)
# ============================================
# PIN für Admin-Panel Zugang (Standard: 1234 — ÄNDERN!)
ADMIN_PIN=1234
# E-Mail für Admin-PIN-Reset (optional)
ADMIN_EMAIL=admin@your-domain.com

# ============================================
# Optional / Development
# ============================================
# Secret für /api/admin/create-test-users (nur Dev)
# ADMIN_SECRET=dev-secret
